---
const { url, title, pubDate, description, tags } = Astro.props;

function formatDate(date: Date, sep=""): string {
  const yyyy = date.getFullYear();
  const mm = ('00' + (date.getMonth()+1)).slice(-2);
  const dd = ('00' + date.getDate()).slice(-2);

  return `${yyyy}${sep}${mm}${sep}${dd}`;
}

---

<div class="block bg-[#FCF8F1] p-6 rounded-lg transition-all duration-300">
    
    <h2 class="font-bold text-2xl mb-2 text-gray-800 hover:text-[#D4873B] transition-colors"><a href={url}>{title}</a></h2>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
        {tags && tags.map((tag: string) => (
            <a href={`/tags/${tag}/`}>
                <span class="bg-[#E78B30] text-white px-2 py-1 rounded-full text-sm">{tag}</span>
            </a>
        ))}
    </div>
    <p class="text-gray-500 text-sm">{formatDate(pubDate, "/")} に公開</p>
</div>
