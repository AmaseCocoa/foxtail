---
import { Image } from 'astro:assets';

import { Icon } from 'astro-icon/components';

import AuthorIcon from '../assets/avatar.png';
---

<div class="rounded-lg p-6 bg-[#FCF8F1]">
    <Image src={AuthorIcon} alt="Author" class="w-20 h-20 rounded-full object-cover mx-auto mb-4 block" />
    <h3 class="text-center text-2xl font-bold" translate="no">AmaseCocoa</h3>
    <p class="text-center text-gray-600 mb-4">Shoot many donuts to your mouth</p>
    <div class="flex justify-center gap-4">
        <a
            href="https://github.com/AmaseCocoa"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-[#D4873B] transition-colors"
        >
            <Icon name="simple-icons:github" size={24} />
        </a>
        <a
            href="https://i.amase.cc/@AmaseCocoa"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-[#D4873B] transition-colors"
        >
            <Icon name="simple-icons:misskey" size={24} />
        </a>
    </div>
</div>