---
import { systemProjects } from '../../data/works';

import { Icon } from 'astro-icon/components';

const iconNames: { [key: string]: string } = {
    Server: 'lucide:server',
    Database: 'lucide:database',
};
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
    {systemProjects.map((project, index) => {
        const icon = iconNames[project.icon];

        return (
            <div class="bg-white rounded-2xl p-6 flex items-start gap-6">
                <div class="text-[#E78B30]">
                    {icon && <Icon name={icon} size={48} class="w-12 h-12" />}
                </div>
                <div class="flex-1">
                    <h3 
                        class="text-2xl font-bold text-gray-900 mb-2" 
                        translate={!project.notranslateTitle ? "yes" : "no"}
                    >
                        {project.title}
                    </h3>
                    <p class="text-gray-700 mb-4">{project.description}</p>
                    <div class="flex flex-wrap gap-2">
                        {project.technologies.map((tech, i) => (
                            <div class="flex items-center bg-[#E78B30] rounded-full px-3 py-1 text-sm" translate="no">
                                <span class="text-white">{tech}</span>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        );
    })}
</div>