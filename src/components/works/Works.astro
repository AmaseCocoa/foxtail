---
import { uiProjects } from '../../data/works';

const getImageUrl = (imageUrl: string | { src: string }): string => {
    if (typeof imageUrl === 'string') {
        return imageUrl;
    }
    return imageUrl.src;
};
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto mb-20">
    {uiProjects.map((project) => (
        <div class="bg-white rounded-2xl duration-300">
            
            <img 
                src={getImageUrl(project.imageUrl)} 
                alt={project.title} 
                class="w-full h-48 object-cover rounded-t-2xl" 
            />

            <div class="p-6">
                <h3 
                    class="text-2xl font-bold text-gray-900 mb-2" 
                    translate={!project.notranslateTitle ? "yes" : "no"}
                >
                    {project.title}
                </h3>
                <p class="text-gray-700 mb-3">{project.description}</p>
                
                <div class="flex flex-wrap gap-2 mb-2">
                    {project.technologies.map((tech, i) => (
                        <div class="flex items-center bg-[#E78B30] rounded-full px-3 py-1 text-sm" translate="no">
                            <span class="text-white">{tech}</span>
                        </div>
                    ))}
                </div>
                
                <a href={project.link} class="text-[#E78B30] hover:text-[#E99643] font-medium">View Details</a>
            </div>
        </div>
    ))}
</div>