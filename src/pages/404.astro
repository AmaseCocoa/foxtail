---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Not Found">
    <div class="text-center py-20">
        <h1 class="text-6xl font-bold text-[#E99643]">404</h1>
        <p class="text-2xl font-medium text-gray-800 mt-4">Page Not Found</p>
        <p class="text-lg text-gray-600 mt-2">
            Sorry, the page you are looking for does not exist.
        </p>
        <a
            href="/"
            class="mt-8 inline-block bg-[#E99643] text-white font-bold py-3 px-6 rounded-lg hover:bg-[#D4873B] transition-colors"
        >
            Go to Home
        </a>
    </div>
</Layout>
